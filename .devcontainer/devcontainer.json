// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:0-3.11",
	"onCreateCommand": "sudo apt update && sudo apt upgrade -y && pip3 install --upgrade pip && pip3 install --user -r requirements.txt",
	"customizations": {
	  "vscode": {
		"settings": {
			"jupyter.kernels.excludePythonEnvironments": ["/usr/bin/python3"]
		},
		"extensions": [
		  "-dbaeumer.vscode-eslint",
		  "ms-python.python",
		  "ms-toolsai.jupyter",
		  "streetsidesoftware.code-spell-checker"
		]
	  }
	},
	"postCreateCommand": "python movie_recommender/train_model.py",
	"postAttachCommand": "streamlit run movie_recommender/movie_recommender.py"
}